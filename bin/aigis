#!/usr/bin/env node
var argv = require('yargs')
  .demand(1, 'Usage: aigis run -c ./path/to/styleguide.xml')
  .command('run', 'Generate styleguide', require('./cmd/run'))
  .example('$0 run -c ./config_file.yml')
  .command('init', 'Copy template & theme & config file', require('./cmd/init'))
  .example('$0 init -e hbs')
  .alias('v', 'version')
  .version(function() { return require('../package').version; })
  .describe('v', 'show version information')
  .alias('h', 'help')
  .usage('Usage: aigis run -c ./path/to/styleguide.xml')
  .showHelpOnFail(false, 'Specify --help for available options')
  .detectLocale(false)
  .help('help')
  .strict()
  .argv;
