<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width">
  <link href="{{root}}assets/css/highlight/okadia.css" rel="stylesheet">
  <link href="{{root}}assets/css/theme.css" rel="stylesheet">

  {{include './head' isComponentDir=true}}
</head>
<body>
<div id="app">
  <div class="aigis-container" v-bind:class="{ close : isNavigationClosed}">
    {{include "./sidemenu"}}
    <div class="aigis-contents">
      <div class="hamburger" v-on:click="toggleNavigation" v-bind:class="{ 'hamburger--active' : !isNavigationClosed}">
        <div class="hamburger-box">
          <div class="hamburger-inner"></div>
        </div>
      </div>
      <div class="aigis-contents__body">
        {{include "./components"}}
        <footer class="aigis-footer">Last update at {{timestamp}}</footer>
      </div>
    </div>
  </div>
</div>
<script src="{{root}}assets/js/vendors/vue.js"></script>
<script src="{{root}}assets/js/app.js"></script>
{{include './footer' isComponentDir=true}}
</body>
</html>
