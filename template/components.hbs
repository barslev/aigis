{{#if components.length}}
  <div>
    {{#each components}}
      <aigis-module name="{{this.config.name}}" source-path="{{this.sourcePath}}">
        {{#if this.config.tag}}
          <ul class="aigis-tags">
            {{#each this.config.tag}}
              <li class="aigis-tags__item aigis-tags__item--{{this}}">{{this}}</li>
            {{/each}}
          </ul>
        {{/if}}
        {{{this.html}}}
      </aigis-module>
    {{/each}}
  </div>
{{else}}
  {{{html}}}
{{/if}}
